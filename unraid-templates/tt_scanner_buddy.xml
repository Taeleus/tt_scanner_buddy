<?xml version="1.0"?>
<Container>
  <Name>tt_scanner_buddy</Name>
  <Repository>your-dockerhub-user/tt_scanner_buddy:latest</Repository>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Support>https://github.com/your-repo/tt_scanner_buddy/issues</Support>
  <Project>https://github.com/your-repo/tt_scanner_buddy</Project>
  <Overview>A scanner companion tool for tracking and analyzing data.</Overview>
  <Category>Tools: Utilities</Category>
  <WebUI>http://[IP]:[PORT:5000]</WebUI>
  <Icon>https://your-repo/logo.png</Icon>
  <DockerHub>https://hub.docker.com/r/your-dockerhub-user/tt_scanner_buddy</DockerHub>
  <Bindings>
    <Port>
      <HostPort>5000</HostPort>
      <ContainerPort>5000</ContainerPort>
      <Protocol>tcp</Protocol>
    </Port>
  </Bindings>
  <Volumes>
    <Volume>
      <HostDir>/mnt/user/appdata/tt_scanner_buddy/</HostDir>
      <ContainerDir>/app/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Volumes>
  <Environment>
    <Variable>
      <Name>TZ</Name>
      <Value>America/New_York</Value>
    </Variable>
    <Variable>
      <Name>LOG_LEVEL</Name>
      <Value>info</Value>
    </Variable>
  </Environment>
</Container>
